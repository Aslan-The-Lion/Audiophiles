      <div class="col-md-8">
        <!-- User Music List -->
        <div class="card">
          <div class="card-body">
            <div class ="user-musiclist">User Musiclist:</div>
            <div class="user-musiclist">
              <!-- Music list items will be added dynamically here -->
            </div>
          </div>
        </div>

        <!-- User Following List -->
        <div class="card mt-3">
          <div class="card-body">
            <div class ="user-following-list">User Following list:</div>
            <div class="user-following-list">
              <!-- Following list items will be added dynamically here -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

